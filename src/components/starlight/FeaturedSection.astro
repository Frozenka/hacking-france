    --featured-hover: rgba(35, 110, 172, 0.08);
    padding: 1.75rem 1.5rem;
    border-radius: 0.75rem;
    background: var(--featured-bg);
    border: 1px solid var(--featured-border);
  }
  :global(:root[data-theme="light"]) .featured {
