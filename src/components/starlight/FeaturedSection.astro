---
import { getCollection } from 'astro:content';
import fs from 'fs';
import path from 'path';

// Derniers writeups : depuis writeups.json (tri par date) si disponible
let writeups: { slug: string; title: string; platform: string }[] = [];
try {
  const p = path.join(process.cwd(), 'public', 'writeups.json');
  if (fs.existsSync(p)) {
    const list = JSON.parse(fs.readFileSync(p, 'utf-8'));
    writeups = (Array.isArray(list) ? list : []).slice(0, 5);
  }
} catch {}
if (writeups.length === 0) {
  const allDocs = await getCollection('docs');
  const fromCollection = allDocs
    .filter((e) => e.id.startsWith('writeup/') && !e.id.includes('Recherche'))
    .sort((a, b) => b.id.localeCompare(a.id))
    .slice(0, 5);
  writeups = fromCollection.map((e) => ({
    slug: e.slug,
    title: e.data.title,
    platform: e.id.includes('vulnlab') ? 'VulnLab' : e.id.includes('hackthebox') ? 'HackTheBox' : e.id.includes('tryhackme') ? 'TryHackMe' : e.id.includes('GOAD') ? 'GOAD' : 'Writeup',
  }));
}

const platformLabel = (platform: string) => platform || 'Writeup';
---

<section class="featured" aria-labelledby="featured-heading">
  <header class="featured-header">
    <h2 id="featured-heading" class="featured-title">À la une</h2>
    <p class="featured-desc">Writeups, événements et ressources à ne pas manquer.</p>
  </header>

  <div class="featured-grid">
    <div class="featured-col featured-col-writeups">
      <h3 class="featured-col-title">Derniers writeups</h3>
      <ul class="featured-list">
        {
          writeups.map((entry) => (
            <li>
              <a href={`/${entry.slug}`} class="featured-card">
                <span class="featured-badge">{platformLabel(entry.platform)}</span>
                <span class="featured-card-title">{entry.title}</span>
                <span class="featured-arrow" aria-hidden="true">→</span>
              </a>
            </li>
          ))
        }
      </ul>
      <a href="/explorer#writeup" class="featured-cta">Tous les writeups</a>
    </div>

    <div class="featured-col featured-col-events">
      <h3 class="featured-col-title">Événements</h3>
      <ul class="featured-list featured-list-compact">
        <li>
          <a href="/events/talks" class="featured-card">
            <span class="featured-badge featured-badge-events">Talks</span>
            <span class="featured-card-title">Replays et présentations</span>
            <span class="featured-arrow" aria-hidden="true">→</span>
          </a>
        </li>
        <li>
          <a href="/events/ctf" class="featured-card">
            <span class="featured-badge featured-badge-events">CTF</span>
            <span class="featured-card-title">Capture The Flag</span>
            <span class="featured-arrow" aria-hidden="true">→</span>
          </a>
        </li>
      </ul>
      <a href="/events/talks" class="featured-cta">Voir les événements</a>
    </div>

    <div class="featured-col featured-col-explore">
      <h3 class="featured-col-title">Parcourir</h3>
      <ul class="featured-list featured-list-compact">
        <li>
          <a href="/explorer" class="featured-card">
            <span class="featured-card-title">Explorer le contenu</span>
            <span class="featured-arrow" aria-hidden="true">→</span>
          </a>
        </li>
        <li>
          <a href="/certifications/oscp" class="featured-card">
            <span class="featured-card-title">Certifications</span>
            <span class="featured-arrow" aria-hidden="true">→</span>
          </a>
        </li>
        <li>
          <a href="/tools/exegol" class="featured-card">
            <span class="featured-card-title">Cheat sheet & outils</span>
            <span class="featured-arrow" aria-hidden="true">→</span>
          </a>
        </li>
      </ul>
      <a href="/explorer" class="featured-cta">Tout explorer</a>
    </div>
  </div>
</section>

