    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    padding: 0.18rem 0.45rem;
    border-radius: 0.25rem;
    background: var(--sl-color-accent-low);
    color: var(--sl-color-accent);
    min-width: 4rem;
    text-align: center;
  }
  .featured-badge-events {
